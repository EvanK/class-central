{% extends 'ClassCentralSiteBundle::base.html.twig' %}

 {% block headmeta %}
     <title>Signup for MOOC Tracker - Notification service for MOOCs</title>
     <meta name="description"
           content="MOOC Tracker is a service from Class Central that sends you email notifications based on your interests. Stay updated on courses that match your interests"/>
     <meta property="og:title" content="Signup for MOOC Tracker - Notification service for MOOCs" />
     <meta property="og:url" content="https://www.class-central.com/mooc-tracker" />
     <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/ccprofilepic.jpg">
     <meta property="og:site_name" content="Class Central"/>
     <meta property="og:description" content="MOOC Tracker is a service from Class Central that sends email notifications based on your interests. Stay updated on courses that match your interests" />
     <meta property="og:type" content="website" />
     <meta property="fb:admins" content="{{ fb_admins }}" />

     <!-- Twitter card integration -->
     <meta name="twitter:card" content="summary">
     <meta name="twitter:site" content="@classcentral">
     <meta name="twitter:title" content="Signup for MOOC Tracker - Notification service for MOOCs">
     <meta name="twitter:description" content="MOOC Tracker is a service from Class Central that sends email notifications based on your interests. Stay updated on courses that match your interests">
     <meta name="twitter:domain" content="www.class-central.com">

 {% endblock %}

{% block contentheader %}
<div class="signup-box">
    <div class="signup-copy">
        <p class="signup-copy-line1">
            Stay updated on courses that match your interests
        </p>

        <p class="signup-copy-line2">
            MOOC Tracker is a service from Class Central that sends you email notifications based on your interests.
        </p>
        <p class="signup-copy-line2">
            Some handy uses of MOOC Tracker include:
            <ul>
                <li>
                    Get a monthly report of courses starting in that month
                </li>
                <li>
                    Track a course and get notified when a course is offered again or its about to start.
                </li>
                <li>
                    Track a search term and get notified whenever new courses matching the search term are added. eg. <b>python</b>, <b>java</b>, <b>music</b>
                </li>
            </ul>
        </p>

    </div>
    <div class="cc-form-box">
        <h3>Sign Up for MOOC tracker</h3>
        {{ form(form) }}

        <p id="cc-form-box-additional-link">
            Already have an account? <a href="{{ path('login')  }}" title="Login to MOOC Tracker">Login>></a>
        </p>
    </div>
</div>
<style type="text/css">
    .cc-page {
        display: none;
    }
</style>
{% endblock %}