{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block headmeta %}
    <title>Preferences | Class Central</title>
{% endblock %}

{% block content %}
    <div class="user-prefs">

        <div class="user-newsletter-checkbox-wrapper">
            <h2>Newsletter Subscriptions</h2>
            {% for newsletter in newsletters %}
                <div >
                    <input type="checkbox" {% if newsletter.id in newsletterIds %}checked="checked"{% endif %} class="user-newsletter-checkbox" value="{{ newsletter.code }}">{{ newsletter.name }}</input>
                    <p>{{ newsletter.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}