{% extends 'ClassCentralSiteBundle::base.html.twig' %}

 {% block headmeta %}
     <title>MOOC Tracker Login | Class Central</title>
     <meta name="description"
           content="MOOC tracker login"/>
     <meta property="og:title" content="Login in to Class Central" />
     <meta property="og:url" content="https://www.class-central.com/mooc-tracker" />
     <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/ccprofilepic.jpg">
     <meta property="og:site_name" content="Class Central"/>
     <meta property="og:description" content="MOOC Tracker is a service from Class Central that sends you email notifications based on your interests. Stay updated on courses that match your interests" />
     <meta property="og:type" content="website" />
     <meta property="fb:admins" content="{{ fb_admins }}" />

     <!-- Twitter card integration -->
     <meta name="twitter:card" content="summary">
     <meta name="twitter:site" content="@classcentral">
     <meta name="twitter:title" content="Login in to Class Central">
     <meta name="twitter:description" content="Login to MOOC tracker to track courses">
     <meta name="twitter:domain" content="www.class-central.com">

 {% endblock %}

{% block contentheader %}
<div class="cc-form-box">
    <h3>MOOC Tracker login</h3>
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button class="btn btn-primary btn-course-cc" type="submit">Login</button>
    </form>

    <p id="cc-form-box-additional-link">
        Don't have an account? <a href="{{ path('mooctracker_signup') }}" title="Sign up for MOOC Tracker">Sign up >></a>
    </p>
</div>
<style type="text/css">
    .cc-page {
        display: none;
    }
</style>
{% endblock %}