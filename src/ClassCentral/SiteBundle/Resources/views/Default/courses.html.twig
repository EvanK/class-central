{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block headmeta %}        
    <title>List of {{offeringTypes[offeringType]['desc']}} free online courses/MOOCs | Class Central</title>
    <meta name="description" content="List of {{offeringTypes[offeringType]['desc']}} free online courses/MOOCs aggregated by Class Central"/>

    <meta property="og:title" content="List of {{offeringTypes[offeringType]['desc']}} free online courses/MOOCs | Class Central" />
    <meta property="og:url" content="{{ baseurl }}{{ path('ClassCentralSiteBundle_courses',{'type': offeringType}) }}" />
    <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/ccprofilepic.png">
    <meta property="og:description" content="List of {{offeringTypes[offeringType]['desc']}} free online courses/MOOCs aggregated by Class Central." />
    <meta property="og:type" content="website" />
{% endblock %}  

{%  block content %}


    <div class="intro-wrap">
        <div class="description-wrap">
            <div class="description">
                <h1 class='cc-page-header'>{{ offeringTypes[offeringType]['nav'] }}</h1>
            </div>
        </div>
    </div>

    <div id="filter-wrap">
        {% include 'ClassCentralSiteBundle:Helpers:filters.html.twig' with {'offSubjects':allSubjects,'offLanguages':allLanguages } %}
        <div class="tables-wrap">
            {% include 'ClassCentralSiteBundle:Helpers:course.table.html.twig' with{'results':results,'tableId':'statustable'} %}
        </div>
    </div>

{% endblock %}
