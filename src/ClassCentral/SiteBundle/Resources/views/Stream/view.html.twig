{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block headmeta %}            
        <title>List of {{stream}} free online courses/MOOCs | Class Central</title>
        <meta name="description" content="List of {{stream}} free online courses/MOOCs aggregated by Class Central. Courses are categorized according to start dates into Recently Started, Just Announced, Upcoming, Self Paced, Ongoing, and Finished"/>

        <meta property="og:title" content="{{stream}} MOOCs/free online courses list | Class Central" />
        <meta property="og:url" content="{{ baseurl }}{{ path('ClassCentralSiteBundle_stream',{'slug': slug}) }}" />
        {% if pageInfo.imageUrl %}
            <meta property="og:image" content="{{ rackspace_cdn_base_url }}{{ pageInfo.imageUrl }}">
        {% else %}
            <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/ccprofilepic.png">
        {% endif %}
        <meta property="og:description" content="List of {{stream}} free online courses/MOOCs aggregated by Class Central. Courses are categorized according to start dates into Recently Started, Just Announced, Upcoming, Self Paced, Ongoing, and Finished" />
        <meta property="og:type" content="website" />

        <!-- Twitter card integration -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@classcentral">
        <meta name="twitter:title" content="List of {{stream}} free online courses/MOOCs">
        <meta name="twitter:description" content="List of {{stream}} free online courses/MOOCs aggregated by Class Central">
        <meta name="twitter:domain" content="www.class-central.com">
{% endblock %} 

{%  block content %}

    {% include 'ClassCentralSiteBundle:Helpers:pageHeader.html.twig' with {'info':pageInfo} %}
    <div id="filter-wrap">
        {% include 'ClassCentralSiteBundle:Helpers:filters.html.twig' with {'offLanguages':offLanguages } %}
        <div class="tables-wrap">
        {% for offeringType, offeringDetails in offeringTypes %}
            {% if offerings[offeringType] is not null and offerings[offeringType]|length > 0 %}
                <h2 class="tabletitle" id="{{offeringType}}">{{offeringDetails.desc}} (<span id="{{ offeringType }}-count">{{ offerings[offeringType]|length }}</span>)</h2>
                {% include 'ClassCentralSiteBundle:Default:courses.table.html.twig' with{'offerings':offerings[offeringType],'tableId':offeringType} %}
            {% endif %}
        {% endfor %}
        </div>
   </div>
{% endblock %}
